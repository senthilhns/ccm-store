# Required variables
region     = "us-west-2"  # Change to your preferred AWS region
vpc_id     = "vpc-xxxxxxxxxxxxxxxxx"  # Your VPC ID
subnet_ids = [
  "subnet-xxxxxxxxxxxxxxxxx",  # At least one subnet ID (preferably in different AZs)
  "subnet-yyyyyyyyyyyyyyyyy"
]

# Cluster and service configuration
cluster_name = "demo-ecs-fargate-cluster"
service_name = "nginx-fargate-service"
service_desired_count = 1

# Container configuration
container_port = 80
container_cpu = 256
container_memory = 512

# Networking
assign_public_ip = true  # Set to false if using private subnets with NAT

# Auto Scaling configuration
enable_auto_scaling = false
min_capacity = 1
max_capacity = 2

# Security
http_ingress_cidr = ["0.0.0.0/0"]  # Restrict this to specific IPs in production

# Tags
tags = {
  Environment = "dev"
  Project     = "demo"
}
